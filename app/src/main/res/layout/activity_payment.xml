<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shruti.project4.PaymentActivity">

    <TextView
        android:id="@+id/paytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/payment"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paytext"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="The Android Pay API offers a quick and easy path to enable secure, one touch payments in our app using our existing payment infrastructure. Once we complete the integration with our app's payment processing flow, Android users will enjoy a rapid, consistent checkout process with Android Pay."
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/home"
        style="@style/CategoryStyle"
        android:layout_above="@+id/artist0"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@color/color"
        android:text="Home" />

    <TextView
        android:id="@+id/artist0"
        style="@style/CategoryStyle"
        android:layout_above="@+id/album0"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@color/color"
        android:text="Artist" />

    <TextView
        android:id="@+id/album0"
        style="@style/CategoryStyle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@color/color"
        android:text="Album" />


</RelativeLayout>
