<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin1"
        tools:context="com.example.shruti.project4.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main"
            android:padding="@dimen/activity_vertical_margin"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/playing_now"
            style="@style/CategoryStyle"
            android:layout_marginBottom="@dimen/activity_vertical_margin1"
            android:background="@color/color"
            android:text="Now Playing" />

        <TextView
            android:id="@+id/songs"
            style="@style/CategoryStyle"
            android:layout_marginBottom="@dimen/activity_vertical_margin1"
            android:background="@color/color"
            android:text="Songs" />

        <TextView
            android:id="@+id/playlists"
            style="@style/CategoryStyle"
            android:layout_marginBottom="@dimen/activity_vertical_margin1"
            android:background="@color/color"
            android:text="Playlists" />

        <TextView
            android:id="@+id/artists"
            style="@style/CategoryStyle"
            android:layout_marginBottom="@dimen/activity_vertical_margin1"
            android:background="@color/color"
            android:text="Artists" />

        <TextView
            android:id="@+id/albums"
            style="@style/CategoryStyle"
            android:layout_marginBottom="@dimen/activity_vertical_margin1"
            android:background="@color/color"
            android:text="Albums" />

        <TextView
            android:id="@+id/liked_songs"
            style="@style/CategoryStyle"
            android:layout_marginBottom="@dimen/activity_vertical_margin1"
            android:background="@color/color"
            android:text="Liked Songs" />

        <TextView
            android:id="@+id/payment"
            style="@style/CategoryStyle"
            android:layout_marginBottom="@dimen/activity_vertical_margin1"
            android:background="@color/color"
            android:text="Payment" />
    </LinearLayout>
</ScrollView>